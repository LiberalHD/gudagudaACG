<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN" "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>

	<package name="index" extends="struts-default" namespace="/">
		
		<action name="index">
            <result>/Index.jsp</result>
        </action>
        
        <action name="test">
            <result>/Test.jsp</result>
        </action>
        
    </package>

	<package name="content" extends="struts-default" namespace="/">
		
		<action name="editContent">
            <result>/SaveContent.jsp</result>
        </action>
		
        <action name="saveContent" class="contentAction" method="saveContent">
            <result name="success">/SaveContentSuccess.jsp</result>
            <result name="input">/SaveContent.jsp</result>
        </action>
        
    </package>

</struts>